{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch React App",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/frontend/node_modules/react-scripts/scripts/start.js",
            "cwd": "${workspaceFolder}/frontend",
            "console": "integratedTerminal",
            "env": {
                "BROWSER": "none"
